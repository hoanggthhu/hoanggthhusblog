      border-radius: 20px;
      width: 250px;
      max-width: 100%;
      transition: border-color 0.3s ease;
    }
    .search-input:focus {
      outline: none;
      border-color: #4a2a8b;
    }
    .posts-list {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 1.5rem;
    }
    .post-card {
      background: #fff;
      border-radius: 12px;
