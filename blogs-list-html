  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,700;1,400&family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="style.css">

  <style>
    /* giữ nguyên style cũ */

    /* Thêm style cho search box */
    .search-container {
      margin: 1rem 0;
      text-align: right;
    }
    .search-input {
      padding: 0.5rem 1rem;
      font-size: 1rem;
      border: 2px solid #6a4caf;
      border-radius: 20px;
      width: 250px;
      max-width: 100%;
      transition: border-color 0.3s ease;
    }
    .search-input:focus {
      outline: none;
      border-color: #4a2a8b;
    }
  </style>
</head>
<body>
  <header class="site-header">
    <div class="container header-inner" style="position:relative;">
      <a class="brand" href="index.html" aria-label="Về trang chủ">
        <h1 class="gradient-title">Mơ Nắng</h1>
        <p class="tag">Những món đồ mang năng lượng chữa lành</p>
      </a>
      <!-- burger và nav giữ nguyên -->
    </div>
  </header>

  <main class="container">
    <section class="category-header">
      <h2 class="gradient-title">Danh sách Blogs</h2>
    </section>

    <div class="search-container">
      <input type="text" id="searchInput" class="search-input" placeholder="Tìm kiếm blog..." aria-label="Tìm kiếm blog">
    </div>

    <section class="posts-list" id="postsList">
      <!-- blog posts load từ JSON hoặc hardcode -->
    </section>
  </main>

  <footer class="site-footer">
    <div class="container footer-inner">
      <p>&copy; <span id="year2"></span> Hoàngg Thhư's Blog</p>
    </div>
  </footer>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const yearEl = document.getElementById("year2");
      if (yearEl) yearEl.textContent = new Date().getFullYear();

      // Mảng blog sample, có thể thay bằng fetch từ blog.json
      const blogs = [
        {
          title: "Hành trình một chiếc khăn tay từ nét thêu đầu tiên",
          excerpt: "Một bài kể chi tiết về quá trình, vật liệu và cảm xúc khi tạo ra chiếc khăn.",
          image: "https://raw.githubusercontent.com/hoanggthhu/hoanggthhusblog/refs/heads/main/Untitled-2-01-01.png?q=80&w=1200",
          url: "blog-post-1.html"
        },
        {
          title: "5 mẫu thêu mang câu chuyện đặc biệt của Mơ Nắng",
          excerpt: "Mỗi mẫu có một ý tưởng, một ký ức và một thông điệp nhỏ.",
          image: "https://raw.githubusercontent.com/hoanggthhu/hoanggthhusblog/refs/heads/main/Rostrum.png?q=80&w=1200",
          url: "blog-post-2.html"
        }
      ];

      const postsList = document.getElementById("postsList");
      const searchInput = document.getElementById("searchInput");

      // Hàm render blog list
      function renderBlogs(filteredBlogs) {
        postsList.innerHTML = "";
        if (filteredBlogs.length === 0) {
          postsList.innerHTML = "<p>Không tìm thấy blog phù hợp.</p>";
          return;
        }
        filteredBlogs.forEach((blog, index) => {
          const article = document.createElement("article");
          article.className = "post-card";
          article.dataset.index = index;
          article.innerHTML = `
            <img src="${blog.image}" alt="${blog.title}">
            <div class="post-body">
              <h4>${blog.title}</h4>
              <p class="excerpt">${blog.excerpt}</p>
              <a href="${blog.url}" class="read">Đọc</a>
            </div>
          `;
          postsList.appendChild(article);

          // Hiệu ứng reveal (giữ nguyên)
          setTimeout(() => article.classList.add('show'), index * 120);
        });
      }

      // Render toàn bộ blog lần đầu
      renderBlogs(blogs);

      // Lọc blog theo từ khóa search
      searchInput.addEventListener("input", () => {
        const query = searchInput.value.trim().toLowerCase();
        const filtered = blogs.filter(blog =>
          blog.title.toLowerCase().includes(query) ||
          blog.excerpt.toLowerCase().includes(query)
        );
        renderBlogs(filtered);
      });
    });
  </script>
</body>
</html>

