      margin-bottom: 0.75rem;
    }
    .post-body .read {
      text-decoration: none;
      color: #6a4caf;
      font-weight: 600;
      font-size: 0.95rem;
      align-self: flex-start;
      transition: color .2s ease, transform .08s ease;
    }
    .post-body .read:hover {
      text-decoration: underline;
      color: #4a2a8b;
      transform: translateY(-1px);
    }
